{
  "name": "brightbroom",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "db:start": "docker compose up -d",
    "db:push": "drizzle-kit push:pg",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "node --loader ts-node/esm src/commands/seed.js",
    "db:reset,": "drizzle-kit reset",
    "db:stop": "docker compose down",
    "test": "vitest",
    "lint": "eslint --ext .js,.ts,.svelte src",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "dev:debug": "DEBUG=* svelte-kit dev",
    "build:debug": "DEBUG=* svelte-kit build",
    "preview:debug": "DEBUG=* svelte-kit preview"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^4.0.0",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@testing-library/svelte": "^5.2.7",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.30.2",
    "eslint": "^9.22.0",
    "eslint-plugin-svelte": "^3.0.3",
    "jsdom": "^26.0.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-svelte": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^3.4.9",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.0.0",
    "vite": "^6.0.0",
    "vite-node": "^3.0.8",
    "vitest": "^3.0.8"
  },
  "dependencies": {
    "@lucia-auth/adapter-drizzle": "^1.1.0",
    "@node-rs/argon2": "^2.0.2",
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.40.0",
    "lucia": "^3.2.2",
    "lucide-svelte": "^0.479.0",
    "oslo": "^1.2.1",
    "postgres": "^3.4.5",
    "zod": "^3.24.2"
  },
  "svelte-check": {
    "detailed": true
  }
}
