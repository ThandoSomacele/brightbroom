# Database connection string for Neon Postgres
DATABASE_URL="postgres://username:password@your-neon-instance.neon.tech/database?sslmode=require"

# Public URL for the site 
PUBLIC_URL="https://brightbroom.com"

# Google Maps API Key
# Note: You need BOTH - they can use the same API key value
VITE_GOOGLE_MAPS_API_KEY="your_google_maps_api_key"
# Resend API Key for email features
RESEND_API_KEY="re_yourresendapikey"

# PayFast integration (optional)
# Note: These are server-side secrets and should NOT have the VITE_ prefix
PAYFAST_SANDBOX_MODE="true"
PAYFAST_MERCHANT_ID="your_merchant_id"
PAYFAST_MERCHANT_KEY="your_merchant_key"
PAYFAST_PASSPHRASE="your_passphrase"
PAYFAST_API_KEY="your_api_key"
VITE_APP_URL="https://brightbroom.com"

# PostHog Analytics (with reverse proxy via SvelteKit server hooks)
# The proxy path /relay-VjWm is hardcoded in +layout.ts and handled by hooks.server.ts
# This works automatically with any staging/production domain
PUBLIC_POSTHOG_KEY="phc_your_posthog_api_key"
PUBLIC_POSTHOG_UI_HOST="https://eu.posthog.com"

# Recurring Payments Cron Job Security Token
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
# This protects the /api/subscriptions/process-recurring endpoint from unauthorized access
CRON_SECRET_TOKEN="your_generated_secret_token_here"

# Add any other environment variables your app needs
